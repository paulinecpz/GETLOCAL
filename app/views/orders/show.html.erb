<div class="container-getlocal">
  <div class="row" id="sidebar-products">
    <div class="col-15">
      <div class="table-responsive">
        <table class="table table-striped">
          <h3 class="text-center">Summary Order : <%= @order.id %></h3>
          <thead>
            <tr>
              <th class="col-3">Product</th>
              <th class="text-center col-2">Quantity</th>
              <th class="text-right col-3">Price</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.product_orders.each do |product| %>
            <tr>
              <td class="col-3"><%= product.product.name %> - store <%= product.product.store.name %></td>
              <td class="col-2"><input class="form-control" type="text" value="<%= product.quantity %>" /></td>
              <td class="text-right col-3"><%= product.product.price %>€</td>

            </tr>
            <% end %>
            <tr>
              <td class="col-3">TOTAL</td>
              <td class="col-2"><%= @order.quantity %></td>
              <td class="text-right col-3"><%= @order.amount %> €</td>
            </tr>

          </tbody>
        </table>
        <button class="btn btn-lg btn-block btn-success text-uppercase" id="checkout-button">Checkout</button>
      </div>
    </div>
  </div>
  <%= link_to 'Modify my items', :back, class: "btn btn-outline-success" %>
  <%= render 'reviews/form', order: @order, review: Review.new %>
</div>
​</div>
