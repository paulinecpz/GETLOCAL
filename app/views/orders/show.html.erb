<div class="banner-payment" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1471193945509-9ad0617afabf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="container d-flex justify-content-around">
    <h1>Your order is confirmed!</h1>
    <div class="banner-card-order">
      <div data-spy="scroll" data-target="#navbar-example2" data-offset="0">
        <h4 id="products">Order Summary</h4>
        <table class="table">
          <thead>
            <tr>
              <th class="text-center">Product</th>
              <th class="text-center">Quantity</th>
              <th class="text-center">Price</th>
              <th class="text-center">Directions</th>
              <th class="text-center">Review</th>

            </tr>
          </thead>
          <tbody>
            <% @order.product_orders.each do |product| %>
            <tr>
              <td><%= product.product.name %> - <strong> <%= link_to product.product.store.name, store_path(product.product.store) %></strong></td>
              <td class="text-center"><%= product.quantity %> </td>
              <td class="text-center"><%= product.product.price %>€</td>
              <td class="text-center"><strong><%= link_to "Let's go!", store_path(product.product.store, :anchor => "location"), class: "btn btn-outline-success" %></strong></td>
              <td class="text-center"><strong><%= link_to 'Write a review', store_path(product.product.store, :anchor => "reviews"), class: "btn btn-outline-success" %></strong></td>
            </tr>
            <% end %>
            <tr>
              <td><strong>TOTAL</strong></td>
              <td><strong><%= @order.quantity %></strong></td>
              <td><strong><%= @order.amount %> €</strong></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
        <%= link_to 'Check All My Orders', orders_path, class: 'btn btn-outline-success'  %>
      </div>
    </div>
  </div>
</div>



