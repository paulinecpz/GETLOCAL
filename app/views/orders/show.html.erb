<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1471193945509-9ad0617afabf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="container d-flex justify-content-around">
    <h1>Your order is confirmed!</h1>
    <div class="banner-card">
      <div data-spy="scroll" data-target="#navbar-example2" data-offset="0">
        <h4 id="products">Order Summary</h4>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.product_orders.each do |product| %>
            <tr>
              <td class="col-3"><%= product.product.name %> - <strong> <%= product.product.store.name %></strong></td>
              <td class="col-2"><input class="form-control" type="text" value="<%= product.quantity %>" /></td>
              <td class="text-right col-3"><%= product.product.price %>€</td>

            </tr>
            <% end %>
            <tr>
              <td class="col-3"><strong>TOTAL</strong></td>
              <td class="col-2"><strong><%= @order.quantity %></strong></td>
              <td class="text-right col-3"><strong><%= @order.amount %> €</strong></td>
            </tr>
          </tbody>
        </table>
        <%= link_to 'Check All My Orders', orders_path, class: 'btn btn-outline-success'  %>
      </div>
    </div>
  </div>
</div>



