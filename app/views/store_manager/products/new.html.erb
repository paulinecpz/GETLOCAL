<div class="container">

<h1>Add my product</h1>

<%= simple_form_for([:store_manager, @store, @product]) do |f| %>
<% if @product.errors.any? %>
  <div class="errors-container">
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <%# f.error_notification %>
  <%# f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, :label => "Name of your product: " %>
  </div>
  <div class="form-inputs">
    <%= f.input :price, :label => "Price: " %>
  </div>
  <div class="form-inputs">
    <%= f.input :stock, :label => "Stock available: " %>
  </div>

  <div class="form-inputs">
    <%= f.association :category, :label => "Choose category:" %>
  </div>

  <div class="form-inputs">
    <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
    </div>
 <div class="form-actions">
    <%= f.submit  "submit my store", class: "btn btn-success" %>
  </div>
<% end %>
<%= link_to 'Back', store_manager_store_path(@store), class: "btn btn-outline-success" %>
</div>

