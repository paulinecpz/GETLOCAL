<%= link_to 'Create a store', new_store_path %>
<div class="m-3">

<!-- Search -->
  <br>
  <div class="container w-50" id= "search-bar-index">
  <%= form_tag stores_path, method: :get do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
  placeholder: "Find a store"
  %>
  <%= submit_tag "Search", class: "btn btn-success", id: "search-bar" %>
  <% end %>
  </div>

<!-- Gmap -->
<div class="content">

  <div class="cards">

      <% @stores.each do |store| %>

      <div class="card-store" id="index-card">

        <% if cl_image_tag store.picture.blank? %>
        <%= image_tag store.picture %>
        <% else %><%= cl_image_tag store.picture %>
        <% end %>
        <div class="card-store-infos">
          <div>
            <h2><%= link_to store.name.capitalize, store_path(store), class: 'link-green' %></h2>
            <p><%= store.address %></p>
          </div>

          <% if store.user.photo.blank? %>
          <%= image_tag "https://www.biography.com/.image/t_share/MTY3MDUxMjkzMjI1OTIwMTcz/brad-pitt-attends-the-premiere-of-20th-century-foxs--square.jpg", class: "card-trip-user avatar-bordered" %>
         <% else %>
         <%=cl_image_tag(store.user.photo, class: "card-trip-user avatar-bordered")%>
         <% end %>
        </div>
      </div>
      <% end %>

  </div>

        <div
        id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  </div>
</div>
