<div class="m-5 mb-5">
  <!-- Gmap -->

      <div id="container_search">
          <div>
          <%= form_tag stores_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search for a store, city, category.."
          %>
          <%= submit_tag "Search", class: "btn btn-success"%>
          <% end %>
          </div>
          <h3 class= "text-center ml-4">or</h3>
          <div class="text-center ml-2" id="geolocation">
            <%= form_tag stores_path, method: :get do %>
            <%= submit_tag "See all the local stores Around You!", class: "btn-localisation" %>
            <% end %>
          </div>
        </div>
    <!--         <div>
      <h2 class= "text-center">Explore the GetLocal map</h2>
    </div> -->

  <div class="content">
    <div class="cards-store" >
      <% @stores.each do |store| %>
      <div class="card-store">
        <% if cl_image_tag store.pictures.present? %>
          <% store.pictures.each do |picture| %>
            <%= cl_image_tag(picture.photo) %>
        <% end %>
        <% else %>
          <%= image_tag "https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"%>
        <% end %>
        <div class="card-store-infos">
          <div>
            <h2><%= link_to store.name.capitalize, store_path(store), class: 'link-green' %></h2>
            <p><%= store.address %></p>
          </div>
          <div class= 'distance-orange'>
            <p>âš‘</p>
            <% if store.distance_to([38.736946, -9.142685]).to_i < 10 %>
                <p><%= store.distance_to([38.736946, -9.142685]).to_f.round(2) %> km</p>
            <% else %>  
                <p><%= store.distance_to([38.736946, -9.142685]).to_i %> km</p>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <div id = "map-index" >
      <div id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <h3 class= "text-center">Explore the GetLocal map</h3>
    </div>
  </div>
</div>

