      <div data-spy="scroll" data-target="#navbar-example2" data-offset="0">
        <h4 id="products">Products</h4>
        <p><div class="store-info">
          <div class= "store-products">
            <table>
              <% @store.products.each do |product| %>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Stock</th>
              </tr>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><%= product.stock %></td>
                <td><%= link_to "Add to my cart", store_product_product_orders_path(@store, product), method: :post %></td>
              </tr>
              <% end %>
            </table>
          </div></div></p>
          <h4 id="reviews">Reviews</h4>
          <p>...</p>
          <h4 id="more-info">More info</h4>
          <p><div class= "store-info">
            <p class="text-justify"><strong>Description: </strong><%= @store.description %></p>
            <p><strong>Website: </strong><%= @store.website %></p>
            <p><strong>Phone number: </strong><%= @store.phone %></p>
            <p><strong>Address: </strong><%= @store.address %></p>
            <!-- map -->
          <h4 id="location">Location</h4>
            <p><div
              id="map"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" style= "height:400px">
            </div></p>
          </div></p>
        </div>
      </div>
