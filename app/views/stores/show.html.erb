                  <!--                             <td>In stock</td>
                  -->                            <td class="col-2"><input class="form-control" type="text" value="<%= item.quantity %>" /></td>
                  <td class="text-right col-3"><%= item.product.price %></td>
                  <td class="text-center col-4"><%= link_to 'Delete', store_product_product_order_path(@store, item.product, item), method: :detele %></td>
                </tr>
                <tr>
                <td class="col-3"><p>Your cart is empty</p></td>
                </tr>
                <% end %>
                <% end %>
              </tbody>
            </table>
            <button class="btn btn-lg btn-block btn-success text-uppercase" id="checkout-button">Checkout</button>
          </div>
        </div>
      </div>
    </div>
